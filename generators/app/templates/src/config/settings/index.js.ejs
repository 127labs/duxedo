import merge from 'lodash/merge'

import production from 'config/settings/production'
import development from 'config/settings/development'
import staging from 'config/settings/staging'

const settings = {}

export default (() => {
  switch (process.env.NODE_ENV) {
    case 'production':
      return merge(production, settings)
    case 'development':
      return merge(development, settings)
    case 'staging':
      return merge(staging, settings)
    default:
      return settings
  }
})()
