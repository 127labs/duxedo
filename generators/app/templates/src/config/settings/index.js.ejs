import production from 'config/settings/production'
import development from 'config/settings/development'
import staging from 'config/settings/staging'

const settings = {}

export default (() => {
  switch (process.env.NODE_ENV) {
    case 'production':
      return _.merge(production, settings)
    case 'staging':
      return _.merge(staging, settings)
    case 'development':
    default:
      return _.merge(development, settings)
  }
})()
