import production from 'config/settings/production'
import development from 'config/settings/development'
import staging from 'config/settings/staging'

const settings = {
  http: {
    url: '<%= dev_api %>',
    mode: 'cors'
  }
}

export default (() => {
  switch (process.env.NODE_ENV) {
    case 'production':
      return { ...production, ...settings }
    case 'development':
      return { ...development, ...settings }
    case 'staging':
      return { ...staging, ...settings }
    default:
      return settings
  }
})()
